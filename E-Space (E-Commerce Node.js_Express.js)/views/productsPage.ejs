        </section>

        <section class="bg-white" style="margin-bottom: 10px;">
            <div class="container">
                <div class="multi-carousel-inner d-flex border-bottom">
                    <% let count=0; %>
                    <% let imgValue;%>
                        <% let productsDisplayed=[]; %> <!--Variavel para armazenar os ids dos produtos ja exibidos-->
                            <% doc.forEach((item)=> { %>
                                <% if (!productsDisplayed.includes(item.id) && count < 4) { %>
                                    <!--verifica se o id do produto atual nao esta na lista, se nao ele adiciona com a funcao push, se sim ele pula para o proximo item -->
                                    <a href="/item/<%=item.id%>" style="text-decoration: none;">
                                        <div class="multi-carousel-item flex-nowrap">
                                            <div class="card m-2" style="border: none;">
                                                
                                                <%if (item.img.img1) {%>
                                                    <% imgValue = item.img.img1;%>
                                                <%}else{%>
                                                    <% imgValue = item.img;%>
                                                    <%}%>
                                                <img class="card-img-top img-thumbnail"
                                                    style="width: 200px; height: 200px; object-fit: contain; border: none;"
                                                    src="<%= imgValue %>">
                                                <div class="card-body">
                                                    <h5 class="card-title">
                                                        <%= item.name %>
                                                    </h5>

                                                    <p class="price mb-0">
                                                        <%= item.value %> $
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                    </a>
                                    <% productsDisplayed.push(item.id); %>
                                        <!--Adicona o id do produto atual na lista, o push add mais elementos ao final do array-->
                                        <% count++; %>
                                            <% } %>
                                                <% }); %>
                </div>
            </div>
        </section>

